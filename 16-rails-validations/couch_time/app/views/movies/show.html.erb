<h1>Movie Show Page</h1>

<h3><%= @movie.title %></h3>
<p><%= @movie.genre %></p>

<marquee>
  <img src="<%= @movie.img_url %>" alt="<%= @movie.title%>">
</marquee>


<%= button_to "delete movie", movie_path(@movie), method: :delete %>
                              <%# "/movies/:id" %>



<h3>Users Who Want to Watch</h3>

<% @movie.users.each do |user|%>
  <p><%= user.name %></p>
<% end  %>
