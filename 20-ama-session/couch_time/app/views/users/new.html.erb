
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>


<div class='form-container'>
  <h1> Create an Account</h1>

  <%= form_for @user do |f| %>
    <div class="form-input">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-input">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <div class="form-input">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>

    <div class="form-input">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>

    <div class="form-input">
      <%= f.label :slogan %>
      <%= f.text_field :slogan %>
    </div>

    <%= f.submit class: 'form-btn'%>
  <% end %>
</div>